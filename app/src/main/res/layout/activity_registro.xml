<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.udea.santiagoceron.appv0.activity_registro"
    android:background="@drawable/fondodown">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:shadowColor="@color/primary_text"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/eUsername"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.4"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/user"
         android:gravity="center"
        android:hint="@string/username"
        android:inputType="textEmailAddress"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/eCelular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/celular"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/eEmail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.4"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/mail"
        android:gravity="center"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ePass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/candado"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/pass_h"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>
    <EditText
    android:id="@+id/ePass2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.4"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:background="@drawable/recuadro"
    android:drawableLeft="@drawable/candado"
    android:drawablePadding="12dp"
    android:ems="10"
    android:gravity="center"
    android:hint="@string/pass2_h"
    android:inputType="textPassword"
    android:maxLines="1"
    android:padding="8dp"
    android:textColor="@color/primary_text"
    android:textColorHint="@color/primary_text"
    android:textSize="20sp"
    android:layout_marginBottom="10dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginBottom="80dp">
        <Button
            android:id="@+id/bLogin"
            android:onClick="bRegister"
            android:text="@string/register"
            android:textColor="#89ff93"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/botonlogin"
            android:shadowColor="#564982"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

    </LinearLayout>
</LinearLayout>

